#!/bin/bash

# Extract raw data using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height=$(jq -r '.height/10' data.json)
weight=$(jq -r '.weight/10' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Format numbers to one decimal place
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1}')
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1}')

# Generate the output string
output="$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

# Print the formatted output
echo "$output"